@model IEnumerable<QuanLyKhachSan.Models.PHONG>
@{
    ViewBag.Title = "Danh Sách Phòng";
}

<div class="container py-5">
    <h2 class="text-center mb-5 fw-bold display-5">Khám Phá Phòng Nghỉ</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            var img = item.ALBUM_ANH_PHONG.FirstOrDefault()?.LINK_ANH ?? "https://images.unsplash.com/photo-1611892440504-42a792e24d32?auto=format&fit=crop&w=800&q=80";
            <div class="col">
                <div class="card room-card h-100">
                    <div class="room-img-container">
                        <img src="@img" class="card-img-top" alt="@item.TEN_PHONG">
                         <span class="status-badge @(item.TRANG_THAI == "TRỐNG" ? "available" : "booked")">@item.TRANG_THAI</span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@item.TEN_PHONG</h5>
                         <p class="text-muted small">@item.LOAI_PHONG.TEN_LOAI</p>
                         <p class="card-text text-truncate">@Html.Raw(item.LOAI_PHONG.MO_TA)</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="room-price">@((item.LOAI_PHONG.GIA_MOT_DEM ?? 0).ToString("#,##0")) VNĐ</span>
                            @if (item.TRANG_THAI == "TRỐNG")
                            {
                                <a href="@Url.Action("Details", new { id = item.MA_PHONG })" class="btn btn-hotel">ĐẶT NGAY</a>
                            }
                            else
                            {
                                <button class="btn btn-secondary disabled">ĐÃ ĐẶT</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
