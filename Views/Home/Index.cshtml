@model IEnumerable<QuanLyKhachSan.Models.PHONG>
@{
    ViewBag.Title = "Trang Chủ";
}

<div class="position-relative overflow-hidden text-center bg-dark text-white p-5 hero-section" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80'); background-size: cover; background-position: center; border-radius: 0 0 50px 50px; margin: -20px -20px 50px -20px;">
    <div class="col-md-8 p-lg-5 mx-auto my-5">
        <h1 class="display-3 fw-bold" style="font-family: 'Playfair Display', serif;">AntiGravity Hotel</h1>
        <p class="lead fw-normal mb-4">Nơi cảm xúc thăng hoa cùng đẳng cấp thượng lưu.</p>
        <a class="btn btn-hotel btn-lg px-5 py-3" href="@Url.Action("Index", "Room")">ĐẶT PHÒNG NGAY</a>
    </div>
</div>

<div class="container mb-5">
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="p-4 bg-white rounded shadow-sm h-100">
                <i class="fas fa-swimming-pool fa-3x text-warning mb-3"></i>
                <h4>Bể bơi vô cực</h4>
                <p class="text-muted">Thư giãn với tầm nhìn toàn cảnh thành phố.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-white rounded shadow-sm h-100">
                <i class="fas fa-utensils fa-3x text-warning mb-3"></i>
                <h4>Nhà hàng 5 sao</h4>
                <p class="text-muted">Tinh hoa ẩm thực Á - Âu.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-white rounded shadow-sm h-100">
                <i class="fas fa-spa fa-3x text-warning mb-3"></i>
                <h4>Spa & Wellness</h4>
                <p class="text-muted">Chăm sóc sức khỏe toàn diện.</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Phòng Nổi Bật</h2>
        <a href="@Url.Action("Index", "Room")" class="text-decoration-none">Xem tất cả <i class="fas fa-arrow-right"></i></a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
            var img = item.ALBUM_ANH_PHONG.FirstOrDefault()?.LINK_ANH ?? "https://images.unsplash.com/photo-1590490360182-c33d57733427?auto=format&fit=crop&w=800&q=80";
            <div class="col">
                <div class="card room-card">
                    <div class="room-img-container">
                        <img src="@img" class="card-img-top" alt="@item.TEN_PHONG">
                        <span class="status-badge @(item.TRANG_THAI == "TRỐNG" ? "available" : "booked")">@item.TRANG_THAI</span>
                    </div>
                    <div class="card-body room-details">
                        <h5 class="card-title fw-bold">@item.TEN_PHONG</h5>
                        <p class="text-muted small mb-2">@item.LOAI_PHONG.TEN_LOAI</p>
                        <div class="d-flex justify-content-between align-items-end">
                            <span class="room-price">@((item.LOAI_PHONG.GIA_MOT_DEM ?? 0).ToString("#,##0")) VNĐ <small class="text-muted fw-normal">/ đêm</small></span>
                            <a href="@Url.Action("Details", "Room", new { id = item.MA_PHONG })" class="btn btn-outline-dark rounded-pill btn-sm">Chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
